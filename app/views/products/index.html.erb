

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Sold</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.sold %></td>
        <td><%= link_to product.user.name, user_path(product.user) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= button_to 'comprar', sales_path(params: {product_id: product.id}) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
<%= link_to 'salir', destroy_user_session_path, method: :delete %>
